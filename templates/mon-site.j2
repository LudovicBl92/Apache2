<VirtualHost {{ ansible_ens33.ipv4.address }}:443>
        ServerName www.mon-site.local
        ServerAlias www.mon-site.local
        DocumentRoot "/var/www/public/vhost1"
        <Directory "/var/www/public/vhost1">
        </Directory>

        SSLEngine on
	SSLCertificateFile /etc/ssl/site1/server.crt
	SSLCertificateKeyFile /etc/ssl/site1/server.key

        ErrorLog /var/log/apache2/error.mon-site.local.log
</VirtualHost>

